import os

class Config:
    SECRET_KEY = "{{ flask_secret_key }}"

    # LDAP
    LDAP_SERVER   = "{{ ldap.uri }}"
    LDAP_BASE_DN  = "{{ ldap.base_dn }}"
    LDAP_USER_DN  = "ou=People,{{ ldap.base_dn }}"

    # Credenciales de bind para b√∫squeda en LDAP
    LDAP_BIND_DN  = "cn={{ ldap_admin.user }},{{ ldap.base_dn }}"
    LDAP_BIND_PW  = "{{ ldap_admin.password }}"

    # MySQL
    DB_HOST       = "{{ app_db.host }}"
    DB_USER       = "{{ app_db.user }}"
    DB_PASS       = "{{ app_db.password }}"
    DB_NAME       = "{{ app_db.name }}"
